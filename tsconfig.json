{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "outDir": "dist"
  },
  "include": [
    "src"
  ]
}
